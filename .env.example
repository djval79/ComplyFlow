# GEMINI API (Required for AI features)
# Get your key from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key
# Set to 'true' if using Supabase Edge Function for AI (requires deployment)
VITE_USE_EDGE_FUNCTION=false

# SUPABASE (Required for production)
# Get these from your Supabase project: https://supabase.com/dashboard
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# STRIPE (Live Credentials)
# These should be added to your Supabase Edge Function Secrets, NOT committed to Git.
# Run: supabase secrets set STRIPE_SECRET_KEY=...
# Run: supabase secrets set STRIPE_WEBHOOK_SECRET=...
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Your Stripe Publishable Key (Starts with pk_live_...)
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key

# RESEND (For Email Notifications)
# Run: supabase secrets set RESEND_API_KEY=...
RESEND_API_KEY=your_resend_api_key
